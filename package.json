{
  "name": "employeeprofile",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^9",
    "express": "^4",
    "@sap/xssec": "^4",
    "@cap-js/hana": "^2",
    "@sap-cloud-sdk/connectivity": "^3",
    "@sap-cloud-sdk/http-client": "^3",
    "@sap-cloud-sdk/resilience": "^3"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.11.0",
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": ">=8",
    "rimraf": "^5.0.5",
    "mbt": "^1.2.29"
  },
  "scripts": {
    "start": "cds watch",
    "watch-employeeprofileui": "cds watch --open employeeprofileui/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy EmployeeProfile --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "[production]": {
        "auth": "xsuaa"
      },
      "destinations": true,
      "html5-runtime": true,
      "sf_api": {
        "kind": "odata-v2",
        "model": "srv/external/sf_api",
        "credentials": {
          "[production]": {
            "destination": "TimeAppSfApi",
            "path": "/odata/v2"
          },
          "[development]": {
            "url": "https://api23preview.sapsf.com/odata/v2"
          }
        }
      }
    }
  }
}
